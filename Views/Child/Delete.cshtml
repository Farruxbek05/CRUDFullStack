@model CRUDdemo.Models.Child
@{
    ViewData["Title"] = "Delete Child";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var employee = ViewBag.Employee as CRUDdemo.Models.Employee;
}

<h1>Delete Child</h1>
<h3>Are you sure you want to delete this child?</h3>

<div class="card">
    <div class="card-header">
        <h4>Child Information</h4>
        <p class="text-muted">Parent: @employee.Name</p>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Gender</dt>
            <dd class="col-sm-9">@Model.Gender</dd>

            <dt class="col-sm-3">Age</dt>
            <dd class="col-sm-9">@Model.Age years</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" asp-route-employeeId="@Model.EmployeeId" class="btn btn-secondary">Cancel</a>
</form>